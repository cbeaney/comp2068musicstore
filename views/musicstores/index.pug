extends ../layouts/main.pug

block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Title
            th Genre
            th Album
            th Artist
            th Price
            th Edit/Delete
        
        tbody
          each musicstore in musicstores
            tr
              td
                a2(`/musicstores/${musicstore.id}`)= musicstore.title
              td
                a2(`/musicstores/${musicstore.id}`)= musicstore.genre
              td
                a2(`/musicstores/${musicstore.id}`)= musicstore.album
              td
                a2(`/musicstores/${musicstore.id}`)= musicstore.artist
              td
                a2(`/musicstores/${musicstore.id}`)= musicstore.price
              td
                a(href=`/musicstores/${musicstore.id}/edit`) edit
                = ' | '
                form.destroy(action=`/musicstores/destroy`, method="POST", onsubmit=`return confirm("Are you sure you want to delete?")`)
                  input(type="hidden", name="id", value=musicstore.id)
                  input(type="submit", value="delete")
